<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_toolbar"
            android:background="@color/colorPrimary"
            android:elevation="4dp">

            <com.nightonke.boommenu.BoomMenuButton
                android:id="@+id/action_bar_right_bmb_garzon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                app:bmb_backgroundEffect="false"
                app:bmb_boomEnum="boomParabola_2"
                app:bmb_hideDuration="500"
                app:bmb_showDuration="500"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:layout_centerVertical="true"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/action_bar_right_bmb_garzon"
                android:id="@+id/textocentur"
                android:textColor="#fff"
                android:fontFamily="@font/fuente"/>



        </RelativeLayout>




    <RelativeLayout
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <com.daimajia.slider.library.SliderLayout
            android:id="@+id/slider"
            android:layout_width="match_parent"
            custom:pager_animation="Accordion"
            custom:auto_cycle="true"
            custom:indicator_visibility="visible"
            custom:pager_animation_span="1100"
            android:layout_height="200dp"/>
        <com.daimajia.slider.library.Indicators.PagerIndicator
            style="@style/AndroidImageSlider_Corner_Oval_Orange"
            android:id="@+id/custom_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            custom:selected_color="#bf8600"
            custom:unselected_color="#55b73d3d"
            custom:shape="oval"
            custom:selected_padding_left="5dp"
            custom:selected_padding_right="5dp"
            custom:unselected_padding_left="5dp"
            custom:unselected_padding_right="5dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            custom:selected_width="6dp"
            custom:selected_height="6dp"
            custom:unselected_width="6dp"
            custom:unselected_height="6dp"
            android:layout_marginBottom="20dp"
            android:background="@color/cardview_dark_background"/>
        <com.daimajia.slider.library.Indicators.PagerIndicator
            android:id="@+id/custom_indicator2"
            style="@style/AndroidImageSlider_Corner_Oval_Orange"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:background="#f60"/>
    </RelativeLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:padding="8dp">

            <androidx.cardview.widget.CardView
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:id="@+id/card1"
                app:cardCornerRadius="10dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="120dp"
                android:layout_margin="5dp">

                <LinearLayout
                    android:background="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/img_protocolos"
                        android:padding="10dp"/>

                    <TextView
                        android:textColor="#747474"
                        android:id="@+id/titulo1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Protocolos"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/fuente"/>


                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                app:cardCornerRadius="10dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="120dp"
                android:layout_margin="5dp"
                android:id="@+id/card2">

                <LinearLayout
                    android:background="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/img_decretos"
                        android:padding="10dp"/>

                    <TextView
                        android:textColor="#747474"
                        android:id="@+id/titulo2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Decretos"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/fuente"/>


                </LinearLayout>

            </androidx.cardview.widget.CardView>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:padding="8dp">

            <androidx.cardview.widget.CardView
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:id="@+id/card3"
                app:cardCornerRadius="10dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="120dp"
                android:layout_margin="5dp">

                <LinearLayout
                    android:background="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/img_noticias"
                        android:padding="10dp"/>

                    <TextView
                        android:textColor="#747474"
                        android:id="@+id/titulo3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Noticias"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/fuente"/>


                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                app:cardCornerRadius="10dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="120dp"
                android:layout_margin="5dp"
                android:id="@+id/card4">

                <LinearLayout
                    android:background="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/img_encuesta"
                        android:padding="10dp"/>

                    <TextView
                        android:textColor="#747474"
                        android:id="@+id/titulo4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Encuesta Covid_19"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/fuente"/>


                </LinearLayout>

            </androidx.cardview.widget.CardView>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:padding="8dp"
            android:layout_marginBottom="10dp">

            <androidx.cardview.widget.CardView
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:id="@+id/card5"
                app:cardCornerRadius="10dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="120dp"
                android:layout_margin="5dp">

                <LinearLayout
                    android:background="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/img_recomendador"
                        android:padding="10dp"/>

                    <TextView
                        android:textColor="#747474"
                        android:id="@+id/titulo5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Recomendador"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/fuente"/>


                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                app:cardCornerRadius="10dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="120dp"
                android:layout_margin="5dp"
                android:id="@+id/card6"
                >

                <LinearLayout
                    android:background="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/img_reporte"
                        android:padding="10dp"/>

                    <TextView
                        android:textColor="#747474"
                        android:id="@+id/titulo6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Reporte casos Covid_19"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:gravity="center_horizontal"
                        android:fontFamily="@font/fuente"/>


                </LinearLayout>

            </androidx.cardview.widget.CardView>



        </LinearLayout>




    </LinearLayout>

</androidx.core.widget.NestedScrollView>